//////////////
   EXCURSION
//////////////

POR CADA NODO HABILITADO HACER

	OBTENER EQUIVALENTES EN EL NODO PARA IDEXCURSION Y IDRC, EL PARÁMETRO NOMBRE ES EL IMPORTANTE


	EXECUTE IMMEDIATE ('DELETE FROM ASIGNACION_EXCURSION@' || NombreNodo || ' WHERE IDEXCURSION = :1 AND IDRC = :2')
	USING IDEXCURSION, IDRC;


	EXECUTE IMMEDIATE ('DELETE FROM EXCURSION@' || NombreNodo || ' WHERE IDEXCURSION = :1 AND IDRC = :2')
	USING IDEXCURSION, IDRC;

END;


DELETE FROM EXCURSIO
WHERE IDEXCURSION = IDEXCURSION AND
IDRC = IDRC;

RETURN 1;


WHEN ERROR THEN 
	RETURN 0;



//////////////
    EQUIPO
/////////////
POR CADA NODO HABILITADO HACER

	OBTENER EQUIVALENTES EN EL NODO PARA IDEQUIPO EL PARÁMETRO NOMBRE ES EL IMPORTANTE


	EXECUTE IMMEDIATE ('DELETE FROM ASIGNACION_EQUIPO@' || NombreNodo || ' WHERE IDEQUIPO = :1')
	USING IDEQUIPO;


	EXECUTE IMMEDIATE ('DELETE FROM EQUIPO@' || NombreNodo || ' WHERE IDEQUIPO = :1')
	USING IDEQUIPO;

END;


DELETE FROM EQUIPO
WHERE IDEQUIPO = IDEXCURSION AND;

RETURN 1;


WHEN ERROR THEN 
	RETURN 0;


////////////////////
     TURISTA
///////////////////
POR CADA NODO HABILITADO HACER
	
	EXECUTE IMMEDIATE ('DELETE FROM ASIGNACION_EXCURSION@' || NombreNodo || ' WHERE DOCUMENTO = :1 AND IDTIPODOCUMENTO = :2')
	USING DOCUMENTO, IDTIPODOCUMENTO;

	EXECUTE IMMEDIATE ('DELETE FROM ASIGNACION_EQUIPO@' || NombreNodo || ' WHERE DOCUMENTO = :1 AND IDTIPODOCUMENTO = :2')
	USING DOCUMENTO, IDTIPODOCUMENTO;

	EXECUTE IMMEDIATE ('DELETE FROM TURISTA@' || NombreNodo || ' WHERE DOCUMENTO = :1 AND IDTIPO = :2')
	USING DOCUMENTO, IDTIPODOCUMENTO;

END;
	RETURN 1;

WHEN ERROR THEN
	RETURN 0;



////////////////////
   SITIO TURISTICO
////////////////////

POR CADA NODO HABILITADO HACER
	
	OBTENER EQUIVALENTE DE IDSITIO AL NODO EL NOMBRE ES EL IMPORTANTE

	EXECUTE IMMEDIATE ('DELETE FROM RUTA@' || NombreNodo || ' WHERE IDSITIO = :1')
	USING IDSITIO;

	EXECUTE IMMEDIATE ('DELETE FROM SITIO_TURISTICO@' || NombreNodo || ' WHERE IDSITO = :1')
	USING IDSITIO;

END;

	DELETE FROM SITIO_TURISTICO
	WHERE IDSITIO = IDSITIO;

RETURN 1;

WHEN ERROR THEN
	RETURN 0;




